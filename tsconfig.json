{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/utils/axios.js",
    "src/components/RouteMenu/BaseMenu.ssx",
    "src/components/layouts/SiderMenu.jsx",
    "src/components/layouts/BasicLayout.jsx",
    "src/layouts/index.jsx",
    "src/layouts/Sidermenu.jsx"
  ],
  "exclude": ["node_modules"]
}
